<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.controller.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" bottom="25" right="10" left="10"/>
    </padding>

    <Text fx:id="greeting"
          text="Welcome, "
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Button GridPane.rowIndex="1"
            GridPane.columnIndex="1"
            text="Add new club member"
            minWidth="200"
            onAction="#toAddNewMemberPage"/>

    <Button GridPane.rowIndex="2"
            GridPane.columnIndex="1"
            text="Manage members"
            minWidth="200"
            onAction="#toManageMemberPage"/>

    <Button GridPane.rowIndex="3"
            GridPane.columnIndex="1"
            text="Change Password"
            minWidth="200"
            onAction="#toChangePasswordPage"/>

    <Button GridPane.rowIndex="4"
            GridPane.columnIndex="1"
            text="Edit Profile"
            minWidth="200"
            onAction="#toEditProfilePage"
    />

    <Button GridPane.rowIndex="5"
            GridPane.columnIndex="1"
            text="Logout"
            minWidth="200"
            onAction="#logout"/>

</GridPane>

