<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.controller.ChangeProfileController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" bottom="25" right="10" left="10"/>
    </padding>

    <Text text="Please enter a new username" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="New Username"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"/>

    <TextField fx:id="newUserName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button AnchorPane.leftAnchor="0" text="Cancel" onAction="#toMainPage"/>

        <Button AnchorPane.leftAnchor="75" text="Done" onAction="#changeProfile"/>
    </AnchorPane>

</GridPane>
