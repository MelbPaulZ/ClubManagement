<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:controller="sample.controller.ChangePasswordController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" bottom="25" right="10" left="10"/>
    </padding>

    <Label text="Old Password"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"/>

    <PasswordField fx:id="oldPassword"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0"/>

    <Label text="New Password"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"/>

    <PasswordField fx:id="newPassword"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label text="Confirm Password"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"/>

    <PasswordField fx:id="confirmPassword"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button AnchorPane.leftAnchor="0" text="Cancel" onAction="#toMainPage"/>

        <Button AnchorPane.leftAnchor="75" text="Done" onAction="#changePassword"/>
    </AnchorPane>

</GridPane>
